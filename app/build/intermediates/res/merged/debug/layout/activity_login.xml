<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_login_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/zhuce"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"

            android:layout_marginTop="31dp"
            android:text="@string/register"
            android:textColor="@color/backclols" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:id="@+id/wwwww"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/mymy" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <AutoCompleteTextView
                    android:id="@+id/et_login"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.00"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:hint="@string/activity_login_username"
                    android:inputType="textEmailAddress"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/et_login"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cccc"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/wwwww"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/suosuosuo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <AutoCompleteTextView
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.00"
                    android:ellipsize="end"
                    android:hint="@string/activity_login_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/forget_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cccc"
            android:layout_marginTop="14dp"
            android:text="忘记密码"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/denglurela"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/button_bg_shape"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>




        <LinearLayout
            android:id="@+id/baoguo"
            android:layout_marginTop="20dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/denglurela"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_marginRight="30dp"
                android:id="@+id/qq"

                android:background="@mipmap/qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <ImageView

                android:id="@+id/weixin"
                android:background="@mipmap/wileweixin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>