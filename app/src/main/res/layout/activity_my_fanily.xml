<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_fanily"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qiandu.live.activity.MyFanilyActivity">

    <RelativeLayout
        android:id="@+id/tobar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/backclols"
        android:orientation="horizontal"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/btn_houtui"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/title_btn_return"
                android:paddingTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:text="我的家族"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/btn_houtui"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="@color/backgroud"
        android:layout_height="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="编辑家族头像"
            android:layout_below="@+id/imgview_cover"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView10" />

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="100dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:layout_width="100dp"
            android:src="@mipmap/btn_tianjiajiahao"
            android:layout_height="100dp"
            android:id="@+id/imgview_cover"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_height="0dp">
        <EditText
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/ed_jiazuname"
            android:text="jiazu"
            android:textColor="@color/black"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="家族族长:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_zuzhangname"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="家族人数:"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_zuzhang"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="人"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />

    </LinearLayout>

    <EditText
        android:paddingLeft="5dp"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:inputType="textMultiLine"
        android:background="@color/white"
        android:text="fdjsakfljdsa"
        android:textColor="@color/black"
        android:id="@+id/ed_jiazuxuanyan" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/img_chengyuan"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@mipmap/btn_hong"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/btn_go"
            android:layout_width="120dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:text="保存信息"

            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/text_bianji"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btn_go"
            android:layout_alignStart="@+id/btn_go"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_chengyuan"
            android:textColor="@color/white"
            android:layout_alignBaseline="@+id/text_bianji"
            android:layout_alignBottom="@+id/text_bianji"
            android:layout_alignLeft="@+id/img_chengyuan"
            android:layout_alignStart="@+id/img_chengyuan"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />
    </RelativeLayout>
</LinearLayout>
