<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_binder_jiazu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroud"
    android:layout_height="match_parent"
    tools:context="com.qiandu.live.activity.BinderJiazuActivity">
    <RelativeLayout
        android:id="@+id/tobar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/backclols"
        android:orientation="horizontal"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/btn_houtui"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/title_btn_return"
                android:paddingTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:text="家族资料修改"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/btn_houtui"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:background="@color/backgroud"
        android:layout_height="0dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="编辑家族头像"
            android:layout_below="@+id/imgview_cover"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView10" />

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="100dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:layout_width="100dp"
            android:src="@mipmap/btn_tianjiajiahao"
            android:layout_height="100dp"
            android:id="@+id/imgview_cover"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    <EditText
        android:editable="false"
        android:paddingLeft="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ed_jiazuname"
        android:hint="@string/joinfrinl"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <EditText
        android:paddingLeft="5dp"
        android:gravity="top"
        android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:inputType="textMultiLine"
        android:hint="@string/jiazuxuanyan"
        android:background="@color/white"
        android:id="@+id/ed_jiazuxuanyan" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_go"

            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@mipmap/btn_hong"/>

        <TextView

            android:text="确认"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"

            android:layout_marginTop="26dp"
            android:id="@+id/textView11"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
